<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <title>{{ space.title }}</title>
    <link href="{{ 'style.css' | stylesheet_url }}" rel="stylesheet" />
    <style>
      h1,h2,h3,h4,h5,h6,p,body,pre {
        color: {{ space.text_color }};
        font-family: {{ space.font_stack }};
      }

      .page {
        background-image: url({{ space.background_image }});
        background-color: {{ space.background_color }};
      }

      {% if space.foreground_color != empty %}
      .card { background-color: {{ space.foreground_color }}; }
      {% endif %}
    </style>
  </head>

  <body class="page">
    <div class="container">
      <div class="card">

        <table>
          <tr>
            <td>
              <img src="{{ space.logo_url }}" height="70" alt="Logo">
            </td>
            <td>
              <div class="padded ">
                <h4 class="text--centered">{{ space.strapline }}</h4>
              </div>
            </td>
          </tr>
        </table>

        <hr>

        {{ content_for_layout }}
      </div>
      <br>
      <div class="text--centered">
        <a href="http://rusic.com"><img src="{{ 'powered_by_rusic.png'| image_url }}" alt="Powered by rusic"></a>
        <br>
        <small class="text--pale">
          {% if current_user %}
            <a href="/auth/signout">Sign out</a> -
          {% endif %}
          <a href="{{space.permalink}}/pages/terms">Terms and conditions</a>
        </small>
      </div>
      <br>
    </div>

    {% if space.ga_code != "" %}
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', '{{ space.ga_code }}', 'auto');
        ga('send', 'pageview');
      </script>
    {% endif %}

    <script src="{{ 'script.js' | javascript_url }}"></script>
  </body>
</html>
